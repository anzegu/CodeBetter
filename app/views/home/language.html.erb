<div id="container">
	<div id="language_title">
	    <p>Please choose the language you'd like to code with </p>
	</div> 
    <div id="language_form">
        <div class="language_choosediv">
            <%= link_to "Ruby", {:action => 'editor', :id => @problem.id, :lid => "2"},{class: 'languages_choose'} %><br>
            <% if @ruby.nil? && current_user.admin == 1 %>
                <%= link_to "Add Code", {:controller => :codes, :action => 'new', :id => @problem.id, :lid => "2"},{class: 'languages_choose'} %>
            <% end %>
        </div>
        <div class="language_choosediv">
            <%= link_to "JavaScript", {:action => 'editor', :id => @problem.id, :lid => "1"},{class: 'languages_choose'} %><br>
            <% if @js.nil? && current_user.admin == 1 %>
                <%= link_to "Add Code", {:controller => :codes, :action => 'new', :id => @problem.id, :lid => "1"},{class: 'languages_choose'} %>
            <% end %>
        </div>
        <div class="language_choosediv">
            <%= link_to "C++", {:action => 'editor', :id => @problem.id, :lid => "3"},{class: 'languages_choose'} %><br>
            <% if @cpp.nil? && current_user.admin == 1 %>
                <%= link_to "Add Code", {:controller => :codes, :action => 'new', :id => @problem.id, :lid => "3"},{class: 'languages_choose'} %>
            <% end %>    
        </div>
    </div>
    <p id="notice"><%= notice %></p>
</div>