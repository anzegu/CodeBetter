<div class="text-center">
<h1 class="h3 mb-3 font-weight-normal">Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :for => "inputEmail", :class => "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :id => "inputEmail", :class => "form-control", :placeholder => "Email address" %>
  </div>

  <div class="field">
    <%= f.label :password, :for => "inputPassword", :class => "sr-only" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", :id => "inputPassword", :class => "form-control", :placeholder => "Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :for => "confirminputPassword", :class => "sr-only" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :id => "confirminputPassword", :class => "form-control", :placeholder => "Confirm Password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>